<!DOCTYPE html>
<html>

<head>
	<title>TeamMatcher</title>
	<link rel="icon" type="image/png">

	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
	<!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<!-- load fontawesome -->
	
	<link rel="stylesheet" href="/css/main.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
		integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
		crossorigin="anonymous"></script>

	<meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
	{{> header }}
	<div class="container my-4">
		<div class="row">
			<div class="col-12">
				<div class="landing-container">
					<div class="row">
						<div class="col-5 input-container">
							<input type="text" name="nombre" id="playerInput" placeholder="Jugador...">
						</div> 
						<div class="col-2">
							<select id="level">
								{{#each levels}}
							  		<option value="{{this}}">{{this}}</option>
						  		{{/each}}
							</select>
						</div> 
						<div class="col-5">
							<div id="addBtn" class="text-center" onclick="addPlayer();">
								Agregar
							</div>
						</div> 
					</div>
				</div>
			</div>
		</div>

		<div class="row overflow-x mt-3">
			{{#each levels}}
				<div class="col-5">
					<div class="landing-container">
						<p> Nivel {{this}}</p>
						<textarea readonly id="level_{{this}}">
						</textarea>
					</div>
				</div>
			{{/each}}
		</div>

		<div class="row">
			<div class="col-12 mr-3">
				<div class="landing-container mt-2">
					<div id="sortBtn" class="text-center" onclick="sortTeams();">
						Sortear!
					</div>
				</div>
			</div>
		</div>

	</div> 
	{{> footer}}
</body>

<script type="text/javascript">
	
	function addPlayer(){

		var player_name = $("#playerInput").val();
		var level = $("#level").val()

		if (player_name == "") {

			return alert("El nombre no puede ser vac√≠o.")

		}

		$("#level_" + level).append(player_name + "\n")

	}

	function sortTeams(){

		{{#each levels}}
	        var players = $.trim($("#level_{{this}}").val());
	        if(players != ""){
	            // Show alert dialog if value is not blank
	        	var players_level_{{this}} = players.split('\n');
	        	console.log(players_level_{{this}})
	        }
        {{/each}}

	}
</script>

</html>