<script>
	$("#copyToClipboardBtn").click(function (){

		var emojiArray = ["😈","🖤","💛","💙","💜","💚","🧡","❤️","👽","👩‍🦲️","🦶️","🧛","👁","🧙‍♂️","🧓","👺"]

